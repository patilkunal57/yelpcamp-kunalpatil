<% layout('layouts/boilerplate')%>
<div class="row ">
    <div class="col-6">
         <div class="card">
            <img src="<%= campground.image %> " class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%=campground.title%></h5>
              <p class="card-text"><%=campground.description%></p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item  text-muted"><%= campground.location %></li>
              <li class="list-group-item">$<%= campground.price%>/night</li>
              <li class="list-group-item">A third item</li>
            </ul>
            <div class="card-body">
              <a href="/campgrounds/<%=campground._id%>/edit "  class="card-link btn btn-info">edit</a>
              <form  class="card-link d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Delete</button>
             </form>
            </div>
         </div>
     </div>
    <div class="col-6"> 
     <div class="mb-3 needs-validation">
       <form action="/campgrounds/<%=campground._id%>/review"method="POST"  class=" needs-validation" novalidate>
          <label for="review" class="form-label">Rating</label>
           <input type="range" class="form-range" min="0" max="5" id="review" name="review[rating]">
          <label class="form-label" for="review" required>Add review</label>
          <textarea class="form-control" type="text" id="review" name="review[body]" required>
          </textarea>
          <div class="mt-3">
            <button class="btn btn-success">submit</button> 
          </div>
       </form>
       <% for( let review of campground.reviews) { %>
        <div class="mb-3 card">
          <div class="card-body"  novalidate>
            <div class="card-title" required>Rating : <%=review.rating %></div>
            <div class="card-text" required>comment :<%=review.body %> </div>
            <form action="/campgrounds/<%=campground._id%>/review/<%=review._id%>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
        <% } %> 
  
      </div>

    </div> 
</div>


